{
  "name": "svg2font-cli",
  "version": "0.0.1",
  "description": "A SVG To Iconfont Project, Just Use Command Line",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "svg2font": "lib/cli.js"
  },
  "type": "commonjs",
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm clean && vite build --mode lib && vite build --mode cli && tsc -p tsconfig.json --emitDeclarationOnly",
    "build:js": "vite build --mode lib && vite build --mode cli",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "clean": "rm -rf lib",
    "lint": "oxlint --tsconfig tsconfig.json src",
    "lint:fix": "oxlint --fix --tsconfig tsconfig.json src",
    "format": "oxfmt src",
    "format:check": "oxfmt --check src"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:jayson991/svg2font-cli.git"
  },
  "keywords": [
    "svg",
    "font",
    "iconfont",
    "svg2font-cli"
  ],
  "author": "Jayson Wu <jaysonwu991@outlook.com>",
  "license": "ISC",
  "files": [
    "lib"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.js",
      "import": "./lib/index.js"
    },
    "./cli": "./lib/cli.js"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "fast-glob": "^3.3.3",
    "svgo": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "oxfmt": "^0.16.0",
    "oxlint": "^1.31.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.6"
  }
}
